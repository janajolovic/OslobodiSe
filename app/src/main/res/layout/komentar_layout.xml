<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfil2"
        android:layout_width="@dimen/velicina_ikonice"
        android:layout_height="@dimen/velicina_ikonice"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgProfil2"
        app:layout_constraintTop_toTopOf="@+id/imgProfil2" />

    <TextView
        android:id="@+id/komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imgProfil2"
        app:layout_constraintTop_toBottomOf="@+id/imgProfil2" />

    <ImageView
        android:id="@+id/thumbUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/komentar"
        app:layout_constraintTop_toBottomOf="@+id/komentar"
        app:srcCompat="@drawable/ic_outline_thumb_up_24"
        app:tint="?colorOnBackground" />

    <TextView
        android:id="@+id/brojGlasova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="24sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/thumbUp"
        app:layout_constraintStart_toEndOf="@+id/thumbUp"
        app:layout_constraintTop_toTopOf="@+id/thumbUp" />

    <TextView
        android:id="@+id/txtIzbrisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="ObriÅ¡i"
        android:textColor="#ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>